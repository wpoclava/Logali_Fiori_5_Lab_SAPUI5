<mvc:View 
	controllerName="logaligroup.Customers.controller.CustomerList"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<List id="customerList" headerText="{i18n>customerListTitle}" class="sapUiResponsiveMargin" width="auto" 
		items="{
				path: 'customer>/Customers',
				sorter: {
						path: 'Country',
						group: true
				}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>customerListTitle}"/>
				<ToolbarSpacer/>
				<SearchField width="50%" search=".onFilterCustomers"/>
			</Toolbar>
		</headerToolbar>		
		<items>
			<ObjectListItem title="{customer>CompanyName} / {customer>ContactName}"
							number="{
									parts: [{path: 'customer>SalesAmount'}, {path: 'view>/currency'}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {
										showMeasure: false
									}
							}"
							numberUnit="{view>/currency}"							
							numberState="{= ${customer>SalesAmount} > 1000 ? 'Success' : 'Error' }">
							<firstStatus>
								<ObjectStatus text="{
									path: 'customer>ContactTitle',
									formatter: '.formatter.contactTitleText'
								}"/>
							</firstStatus>
			</ObjectListItem>
		</items>
	</List>
</mvc:View>